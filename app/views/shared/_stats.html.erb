<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <% if current_user?(@user) %>
    <a href="<%= unread_user_path(@user) %>">
      <strong id="unread" class="stat">
        <%= @user.unread_posts.count %>
      </strong>
      unread posts
    </a>
  <% else %>
    <a href="<%= unread_user_path(@user) %>">
      <strong id="unread" class="stat">
        <%= current_user.unread_posts.find_all_by_user_id(@user.id).count %>
      </strong>
      unread posts of <%= @user.name %>
    </a>
  <% end %>
</div>